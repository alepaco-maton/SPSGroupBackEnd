{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "es2020",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ]
}